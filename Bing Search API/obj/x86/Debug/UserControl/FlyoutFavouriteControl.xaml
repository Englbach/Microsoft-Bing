<UserControl
    x:Class="Bing_Search_API.userControl.FlyoutFavouriteControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Bing_Search_API.userControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
 >

    <ListBox x:ConnectionId='1' Name="lstList" Width="300"                                            >
        <ListBoxItem>
            <StackPanel Orientation="Horizontal">
                <SymbolIcon Symbol="AllApps" RenderTransformOrigin="0.5,0.5">
                    <SymbolIcon.RenderTransform>
                        <CompositeTransform ScaleX="0.8" ScaleY="0.8"></CompositeTransform>
                    </SymbolIcon.RenderTransform>
                </SymbolIcon>
                <TextBlock Text="History" Margin="10,0" FontSize="13"></TextBlock>
            </StackPanel>
        </ListBoxItem>

        <ListBoxItem>
            <StackPanel Orientation="Horizontal">
                <SymbolIcon Symbol="Bookmarks" RenderTransformOrigin="0.5,0.5">
                    <SymbolIcon.RenderTransform>
                        <CompositeTransform ScaleX="0.8" ScaleY="0.8"></CompositeTransform>
                    </SymbolIcon.RenderTransform>
                </SymbolIcon>
                <TextBlock Text="Bookmarks" Margin="10,0" FontSize="13"></TextBlock>
            </StackPanel>
        </ListBoxItem>
        <ListBoxItem>
            <StackPanel Orientation="Horizontal">

                <TextBlock Text="Cast media to device" Margin="30,0" FontSize="13"></TextBlock>
            </StackPanel>
        </ListBoxItem>


        <ListBoxItem>
            <StackPanel Orientation="Horizontal">

                <TextBlock Text="Find on page" Margin="30,0" FontSize="13"></TextBlock>
            </StackPanel>
        </ListBoxItem>

        <ListBoxItem>
            <StackPanel Orientation="Horizontal">

                <TextBlock Text="Print" Margin="30,0" FontSize="13"></TextBlock>
            </StackPanel>
        </ListBoxItem>

        <ListBoxItem>
            <StackPanel Orientation="Horizontal">

                <TextBlock Text="Pint this page to start" Margin="30,0" FontSize="13"></TextBlock>
            </StackPanel>
        </ListBoxItem>

        <ListBoxItem>
            <StackPanel Orientation="Horizontal">
                <SymbolIcon Symbol="Setting" RenderTransformOrigin="0.5,0.5">
                    <SymbolIcon.RenderTransform>
                        <CompositeTransform ScaleX="0.8" ScaleY="0.8"></CompositeTransform>
                    </SymbolIcon.RenderTransform>
                </SymbolIcon>
                <TextBlock Text="Setting" Margin="10,0" FontSize="13"></TextBlock>
            </StackPanel>
        </ListBoxItem>

    </ListBox>
</UserControl>

